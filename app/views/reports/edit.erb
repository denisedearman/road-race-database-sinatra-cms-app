<div class="container">
  <h1>Edit Race Report</h2>
  <hr class="solid">
  <form method = "POST" action="/reports/<%=@report.id%>">
    <input type="hidden" name="_method" value="PATCH">

    <label for="title">Title</label>
    <input type="text" name="report[title]" id="report_title" value="<%=@report.title%>"><br>
    <label for="score">Score (0 to 5)</label>
    <input type="text" name="report[score]" id="report_score" value="<%=@report.score%>"><br>
    <label for="year">Year</label>
    <input type="text" name="report[year]" id="report_year" value="<%=@report.year%>"><br>
    <label for="miles_per_week">What was your average miles run per week leading up to this race?</label>
    <input type="text" name="report[miles_per_week]" id="report_miles_per_week" value="<%=@report.miles_per_week%>"><br>
    <label for="runs_per_week">How many days do you run per week?</label>
    <input type="text" name="report[runs_per_week]" id="report_runs_per_week" value="<%=@report.runs_per_week%>"><br>
    <label for="content">Describe your race experience</label>
    <textarea rows="10" cols="50" name="report[content]" id="report_content"><%=@report.content%></textarea><br>

    <legend>Change the race you are writing a race report on:</legend>

      <%Race.all.each do |race|%>
        <input id="race_<%=race.id%>" type="radio"  name="report[race_id]" value="<%=race.id%>"  <%='checked' if @report.race.id == race.id %>> <%=race.name%></input><br>
      <%end%>
        <input id="race_0" type="radio" name="report[race_id]" value="0"> Other - Create Below</input>

    <legend>Or create a new race for the report :</legend>
    <label for="race_name">Race Name</label>
    <input type="text" name="race[name]" id="new_race_name"><br>
    <label for="race_location">Race Location</label>
    <input type="text" name="race[location]" id="new_race_location"><br>
    <label for="race_next_race_date">Next Race Day</label>
    <input type="text" name="race[next_race_day]" id="new_race_next_race_day"><br>
    <label for="race_distance">Race Distance</label>
    <input type="text" name="race[distance]" id="new_race_distance"><br>
    <hr class="solid">
    <input type="submit" class="btn btn-primary" value="Edit Report">

  </form>
</div>
