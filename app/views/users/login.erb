<div class="container">
  <h1>Log In</h1>
  <hr class="solid">
  <form method="POST" action="/login" class="col-xs-5">
    <div class="form-group row">
      <label class="col-xs-3 col-form-label" for="username">Username:</label>
      <div class="col-xs-9">
        <input type="text" class="form-control" name="username">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-xs-3 col-form-label" for="password">Password:</label>
      <div class="col-xs-9">
        <input type="password" class="form-control" name="password">
      </div>
    </div>
    <div class="form-group row">
      <input type="submit" class="btn btn-block btn-success"  value="submit">
    </div>
  </form>
</div>
