<div class="container">
  <form method="POST" action="/signup" class="col-xs-7">
    <h1>Sign Up</h1>
    <hr class="solid">
    <div class="form-group row">
      <label class="col-xs-3 col-form-label" for="email">Email:</label>
      <div class="col-xs-9">
        <input type="text" class="form-control" name="email">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-xs-3 col-form-label"  for="username">Username:</label>
      <div class="col-xs-9">
        <input type="text" class="form-control" type="text" name="username">
      </div>
    </div>
    <div class="form-group row">
      <label class="col-xs-3 col-form-label" for="password">Password:</label>
      <div class="col-xs-9">
        <input type="password" class="form-control" name="password">
      </div>
    </div>
    <div class="form-group row">
      <input type="submit" class="btn btn-block btn-success"  value="Sign Up">
    </div>
  </form>
</div>
